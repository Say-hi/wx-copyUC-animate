.container {
  background-image: url("http://image.uc.cn/s/uae/g/01/quantumplanmarch/app/components/images/bg_068ab.jpg");
  background-repeat: round;
  overflow: hidden;
  position: relative;
}
.container .video-area {
  position: relative;
  margin-top: 150rpx;
  padding: 10rpx;
}
.container .video-area .video-area-work {
  position: relative;
}
.container .video-area .video-area-work .videoCover {
  position: absolute;
}
.container .video-area .video-area-work .videoPlay {
  position: absolute;
  width: 200rpx;
  height: 100rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.container .video-area .video-area-work .index-video {
  position: absolute;
  top: 0;
  left: 0;
}
.container .video-area .video-area-work .video-bottom {
  position: absolute;
  bottom: -54rpx;
  left: -20rpx;
  height: 54rpx;
  width: 105%;
}
.container .video-area .video-area-work .lrImages {
  position: absolute;
  bottom: -256rpx;
  width: 100%;
  height: 230rpx;
}
.container .video-area .video-area-work .lrImages image {
  width: 104rpx;
  height: 230rpx;
  position: absolute;
  bottom: 0;
}
.container .video-area .video-area-work .lrImages .lrImages-r {
  right: 0;
}
.container .bottom {
  position: absolute;
  width: 100%;
  bottom: 276rpx;
}
.container .bottom .bottom-mobile {
  position: absolute;
  left: 0;
}
.container .bottom .bottom-mobile .b-m-image {
  width: 262rpx;
  height: 276rpx;
  background: url('http://image.uc.cn/s/uae/g/01/quantumplanmarch/app/components/images/phone_sprite_dc6fc.png') no-repeat 0 0;
  background-size: 1000% 100%;
}
.container .bottom .bottom-letter {
  position: absolute;
  right: 0;
}
.container .bottom .bottom-letter .b-l-image {
  width: 262rpx;
  height: 276rpx;
  background: url('http://image.uc.cn/s/uae/g/01/quantumplanmarch/app/components/images/envelope_sprite_426ce.png') no-repeat 0 0;
  background-size: 1000% 100%;
}
.container .test-out {
  overflow: hidden;
}
.container .test {
  animation: leftShow 3s steps(10) infinite;
}
.container .test-out,
.container .test {
  width: 262rpx;
  height: 276rpx;
}
.container .test-out image,
.container .test image {
  width: 1000%;
  height: 276rpx;
}
@keyframes leftShow {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-2620rpx);
  }
}
.animated {
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}
.animatedDelay {
  animation-delay: 1s;
}
@keyframes fadeInDown {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, -100%, 0);
    transform: translate3d(0, -100%, 0);
  }
  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}
.fadeInDown {
  -webkit-animation-name: fadeInDown;
  animation-name: fadeInDown;
}
@keyframes slideInLeft {
  from {
    -webkit-transform: translate3d(-100%, 0, 0);
    transform: translate3d(-100%, 0, 0);
    visibility: visible;
  }
  to {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}
.slideInLeft {
  -webkit-animation-name: slideInLeft;
  animation-name: slideInLeft;
}
@keyframes slideInRight {
  from {
    -webkit-transform: translate3d(100%, 0, 0);
    transform: translate3d(100%, 0, 0);
    visibility: visible;
  }
  to {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}
.slideInRight {
  -webkit-animation-name: slideInRight;
  animation-name: slideInRight;
}
